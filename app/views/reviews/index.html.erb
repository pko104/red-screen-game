<h1>Reviews</h1>

<body bgcolor="#DA4545">
  <%if @reviews%>
    <div class="scroller" style ="position:relative;margin: auto;width: 530px;color:white;">
      <%@reviews.each do |r|%>
        <div>
          <%if r.rating == 1%>
            <%if r.user%>
              <h3><%=r.user.username + ": " + r.message + " [#{r.rating} star]"%><h3>
            <%else%>
              <h3><%="Anonymous: " + r.message + " [#{r.rating} star]"%><h3>
            <%end%>
          <%else%>
            <%if r.user%>
              <h3><%=r.user.username + ": " + r.message + " [#{r.rating} stars]"%><h3>
            <%else%>
              <h3><%="Anonymous: " + r.message + " [#{r.rating} stars]"%><h3>
            <%end%>
          <%end%>
        </div>
      <%end%>
    </div>
  <%end%>


<div class ="" style= "font-family:verdana;position:relative;margin: auto;width: 700px;">

  <%= form_for @review, method: :post do |f| %>

    <div class ="review_message">
      <%= f.label :message%>
      <%= f.text_area :message, size: "100x1"%>
    </div>
    <div class="rating_list">
      <%= f.label :rating %>
      <input id="input-1" type="number" class="rating" data-show-clear="false" min=0 max=5 step=1 data-size="xs" value="5" data-glyphicon="false">
      <%= f.submit  "Submit", id: 'create-review'%>
    </div>
  <%end%>
</div>

</body>




