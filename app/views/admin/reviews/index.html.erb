<h1>Reviews</h1>

<body bgcolor="#DA4545">
  <%if @reviews%>
    <%@reviews.each do |r|%>
      <div style="text-align:center;font-size:200%">
        <%if r.user%>
          <%=r.user.username + ":"%>
        <%else%>
          <%="Anonymous:"%>
        <%end%>
          <%=r.message%>
          <%=r.rating%>
          <%= link_to 'Delete', admin_review_path(r), method: :delete  %>
      </div>
    <%end%>
  <%end%>

</body>




