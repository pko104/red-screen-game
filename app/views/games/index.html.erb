<body bgcolor="#DA4545">

<ul id="nav-two">
  <ul class="peri-boxes" id="buttons" style ="position:relative;margin: auto;width: 4px; width: 500px;">
    <li>
      <a class="green box gas" <%= link_to "Play", new_game_path%>
      </a>
    </li>
    <li>
      <a class="green box gas" <%= link_to "Highscores", highscores_path%>
      </a>
    </li>
     <li>
    <a class="green box gas" <%= link_to "Chatroom", chats_path%>
      </a>
    </li>
    <li>
      <a class="green box gas" <%= link_to "Credits", credits_path%>
      </a>
    </li>
  </ul>
  <audio id="beep-two">
  <source src="assets/hover.mp3" controls></source>
  <source src="assets/click.ogg" controls></source>
  </audio>
</ul>

<script>$("#nav-two a")
  .each(function(i) {
    if (i != 0) {
      $("#beep-two")
        .clone()
        .attr("id", "beep-two" + i)
        .appendTo($(this).parent());
    }
    $(this).data("beeper", i);
  })
  .mouseenter(function() {
    $("#beep-two" + $(this).data("beeper"))[0].play();
  });
  $("#beep-two").attr("id", "beep-two0");
</script>





