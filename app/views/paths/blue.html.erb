<body bgcolor="#0066CC">

<% if flash.any? %>
  <div class="flash">
    <div class="container">
      <h1><%= flash[:notice]%></h1>
    </div>
  </div>
<%end%>

<div id="rainbow">

  <ul class="blue-boxes" id="buttons">
    <%@path_array.each do |paths|%>
      <li>
        <a class="green box gas" <%=link_to "", paths%> </a>
      </li>
    <%end%>
  </ul>
</div>
